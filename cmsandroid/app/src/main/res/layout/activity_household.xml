<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.HouseholdActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="户籍档案详情"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 详情视图 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <!-- 核心户籍卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E1F5FE"
                    android:layout_marginBottom="20dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_menu_icon"
                            android:backgroundTint="@color/menu_household">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_household_rounded"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:id="@+id/tv_household_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="加载中..."
                                android:textColor="@color/primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_household_head"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="户主姓名加载中"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 地点与规模详情卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="登记地点与家庭规模"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="户籍详细地址" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_register_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" android:layout_marginBottom="16dp" />

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F8F8F8" android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="人口数量" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_population_count" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="当前状态" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_household_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/primary" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 户主详情卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="户主关键细节"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="户主身份证号" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                            <TextView android:id="@+id/tv_resident_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" android:layout_marginBottom="12dp" />

                            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F8F8F8" android:layout_marginBottom="12dp" />

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="联系电话" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                            <TextView android:id="@+id/tv_phone_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 档案系统信息卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="档案系统详情"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout android:id="@+id/layout_notes" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备注信息" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                            <TextView android:id="@+id/tv_notes" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="无" android:textColor="@color/on_surface" android:textSize="14sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="登记建档日期" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                        <TextView android:id="@+id/tv_register_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 操作按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="编辑档案"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary" />

                     <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="注销户籍"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/error"
                        app:iconTint="@color/white"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 编辑视图 -->
        <ScrollView
            android:id="@+id/view_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="16dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E1F5FE"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改户籍资料"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_household_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="户籍号码" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_household_head_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="户主姓名" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="登记详细地址" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_householder_id_card_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="户主身份证号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/outline"
                            app:hintTextColor="@color/primary"
                            app:boxBackgroundColor="@color/white"
                            app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_phone_number_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="总联系方式" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_marginStart="6dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/outline"
                            app:hintTextColor="@color/primary"
                            app:boxBackgroundColor="@color/white"
                            app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_population_count_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="家庭人口"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <AutoCompleteTextView
                            android:id="@+id/et_household_type_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="户籍类型"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="建档日期 (yyyy-MM-dd)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_notes_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="户籍备注说明"
                            android:minLines="2"
                            android:gravity="top" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="放弃修改"
                            android:layout_marginEnd="12dp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1.5"
                            android:text="保存并应用"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>