<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="@color/menu_medical"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvMedicalInsuranceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="医疗保险类型"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <TextView
                android:id="@+id/tvMedicalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_welcome_toast"
                android:backgroundTint="@color/menu_medical"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/outline"
            android:layout_marginVertical="16dp"
            android:alpha="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvMedicalCardNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="@color/on_surface"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="诊断结论"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvResidentId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="@color/on_surface"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hidden but kept for logic -->
        <TextView android:id="@+id/tvId" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
        <TextView android:id="@+id/tvInsuranceCompany" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
        <TextView android:id="@+id/tvPolicyNumber" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
        <TextView android:id="@+id/tvCoverageArea" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>