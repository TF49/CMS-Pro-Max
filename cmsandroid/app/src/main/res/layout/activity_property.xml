<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.PropertyActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="房产信息详情"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 详情视图 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <!-- 核心资产卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F3EDF7"
                    android:layout_marginBottom="20dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_menu_icon"
                            android:backgroundTint="@color/menu_property">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_property_rounded"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:id="@+id/tv_resident_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="加载中..."
                                android:textColor="@color/primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_property_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="资产类型加载中"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 资产信息卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详细资产信息"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="资产地址" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="面积 (m²)" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_area" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="房间数" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_rooms" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="产权证号" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_property_certificate_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="估值 (元)" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="使用类型" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_use_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 档案与时间卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="档案属性与时间"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="资产档案ID" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="14sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="所有权人ID" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_resident_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="取得日期" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_purchase_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="创建时间" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_create_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="更新时间" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_update_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备注说明" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_remark" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="无" android:textColor="@color/on_surface" android:textSize="14sp" android:layout_marginTop="2dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 操作按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="修改资产"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="删除档案"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/error"
                        app:iconTint="@color/white"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 编辑视图 -->
        <ScrollView
            android:id="@+id/view_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="16dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3EDF7"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改房产详情"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_resident_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="居民姓名" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_id_card_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="身份证号码" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <AutoCompleteTextView
                            android:id="@+id/et_property_type_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="房产类型"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地址" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_area_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="面积 (m²)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_property_certificate_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="产权证号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_price_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="估值 (元)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <AutoCompleteTextView
                            android:id="@+id/et_use_type_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="使用类型"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_purchase_date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="取得日期 (yyyy-MM-dd)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_rooms_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="房间数" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_remark_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="备注"
                            android:minLines="3"
                            android:gravity="top" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="取消"
                            android:layout_marginEnd="12dp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1.5"
                            android:text="提交更改"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>