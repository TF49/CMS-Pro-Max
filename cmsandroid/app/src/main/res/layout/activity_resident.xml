<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.ResidentActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="居民档案详情"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 详情视图 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <!-- 核心身份卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F3EDF7"
                    android:layout_marginBottom="20dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_menu_icon"
                            android:backgroundTint="@color/primary">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person_rounded"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="加载中..."
                                android:textColor="@color/primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="性别未知"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 基本信息卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基本档案信息"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="身份证号" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_id_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="年龄" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_age" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="出生日期" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_birth_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="民族" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_nationality" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="婚姻状况" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_marital_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 户籍与教育卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="户籍与社会信息"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="户籍ID" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_household_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="是否户主" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_is_householder" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="户籍类型" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_household_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="与户主关系" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_relationship" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="文化程度" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_education" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="职业" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_occupation" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="个人年收入" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_income" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 联系方式卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系方式与时间"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="联系电话" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_phone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="电子邮箱" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="16sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="家庭住址" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="登记日期" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_register_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="最近更新" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_update_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="详情备注" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <TextView android:id="@+id/tv_notes" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="无" android:textColor="@color/on_surface" android:textSize="14sp" android:layout_marginTop="2dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 操作按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="编辑资料"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="删除档案"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/error"
                        app:iconTint="@color/white"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 编辑视图 -->
        <ScrollView
            android:id="@+id/view_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="16dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3EDF7"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改居民资料"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="姓名" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_id_card_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="身份证号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_birth_date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="出生日期 (yyyy-MM-dd)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="性别选择" android:textColor="@color/on_surface_variant" android:textSize="14sp" android:layout_marginBottom="8dp" />
                    <RadioGroup android:id="@+id/rg_gender_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                        <RadioButton android:id="@+id/rb_male_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="男" android:layout_marginEnd="24dp"/>
                        <RadioButton android:id="@+id/rb_female_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="女" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="联系电话" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="电子邮箱" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="家庭住址" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxStrokeColor="@color/outline"
                            app:hintTextColor="@color/primary"
                            app:boxBackgroundColor="@color/white"
                            app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                            <AutoCompleteTextView
                                android:id="@+id/et_marital_status_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="婚姻状况"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxStrokeColor="@color/outline"
                            app:hintTextColor="@color/primary"
                            app:boxBackgroundColor="@color/white"
                            app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                            <AutoCompleteTextView
                                android:id="@+id/et_household_type_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="户籍类型"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxStrokeColor="@color/outline"
                            app:hintTextColor="@color/primary"
                            app:boxBackgroundColor="@color/white"
                            app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                            <AutoCompleteTextView
                                android:id="@+id/et_education_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="文化程度"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxStrokeColor="@color/outline"
                            app:hintTextColor="@color/primary"
                            app:boxBackgroundColor="@color/white"
                            app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                            <AutoCompleteTextView
                                android:id="@+id/et_relationship_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="与户主关系"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_notes_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="备注"
                            android:minLines="3"
                            android:gravity="top" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="放弃修改"
                            android:layout_marginEnd="12dp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1.5"
                            android:text="保存更改"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>