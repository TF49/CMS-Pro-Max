<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.VehicleActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="车辆核心档案"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 详情视图 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <!-- 核心车辆卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E7F3FF"
                    android:layout_marginBottom="20dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_menu_icon"
                            android:backgroundTint="@color/menu_vehicle">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_vehicle_rounded"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:id="@+id/tv_license_plate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="加载中..."
                                android:textColor="@color/primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_resident_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="所有权人加载中"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 车辆参数卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车辆具体参数"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="车辆类型" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_vehicle_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="颜色" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="品牌" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_brand" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="型号" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_model" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F8F8F8" android:layout_marginVertical="8dp" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="识别特征" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="4dp">
                             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发动机号" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                             <TextView android:id="@+id/tv_engine_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="14sp" android:layout_marginBottom="4dp" />
                             
                             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="车架号" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                             <TextView android:id="@+id/tv_chassis_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 购置与维保卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购置与维保信息"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="购买日期" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_purchase_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="购买价格" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_purchase_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F8F8F8" android:layout_marginVertical="8dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保险到期" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_insurance_expiry_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下次年检" android:textColor="@color/on_surface_variant" android:textSize="12sp" />
                                <TextView android:id="@+id/tv_inspection_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 档案备注卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="档案详情"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="资产编号" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                                <TextView android:id="@+id/tv_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="持有人ID" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                                <TextView android:id="@+id/tv_resident_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="建档时间" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                                <TextView android:id="@+id/tv_create_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="更新时间" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                                <TextView android:id="@+id/tv_update_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textColor="@color/on_surface" android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备注说明" android:textColor="@color/on_surface_variant" android:textSize="11sp" />
                        <TextView android:id="@+id/tv_note" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="无" android:textColor="@color/on_surface" android:textSize="14sp" android:layout_marginTop="2dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 操作按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="修改档案"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="删除档案"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/error"
                        app:iconTint="@color/white"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 编辑视图 -->
        <ScrollView
            android:id="@+id/view_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="16dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E7F3FF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改车辆档案"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_license_plate_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="车牌号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <AutoCompleteTextView
                            android:id="@+id/et_vehicle_type_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="车辆类型"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_brand_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="品牌" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_model_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="型号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_color_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="颜色" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_engine_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="发动机号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_chassis_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="车架号" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_purchase_date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="购买日期 (yyyy-MM-dd)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_purchase_price_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="购买价格 (元)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_insurance_expiry_date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="保险到期 (yyyy-MM-dd)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_inspection_date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="年检日期 (yyyy-MM-dd)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/primary"
                        app:boxBackgroundColor="@color/white"
                        app:shapeAppearanceOverlay="@style/TextFieldRoundedCorners">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_note_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="备注"
                            android:minLines="3"
                            android:gravity="top" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="放弃修改"
                            android:layout_marginEnd="12dp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1.5"
                            android:text="提交档案"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>